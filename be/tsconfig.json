{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["index.ts", "db.ts", "routes/**/*.ts", "middlewares/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
